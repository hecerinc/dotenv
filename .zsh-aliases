# Git
alias gs="git status"
alias gb="git branch"
alias gpom="git push origin main"

alias ls="ls -p --color=auto $*"


# Support ctrl sequences through SSH
# -------------------------------------------
bindkey -e
## Control + backspace
bindkey '^H' backward-kill-word
## Control + arrows
bindkey ";5C" forward-word
bindkey ";5D" backward-word
